@model ProductDetailsViewModel

@{
    ViewData["Title"] = "Product Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Product Details</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

<!-- Product Information Card -->
<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Product Information</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">ID:</dt>
                    <dd class="col-sm-8">@Model.Product.Id</dd>

                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@Model.Product.Name</dd>

                    <dt class="col-sm-4">Adapter:</dt>
                    <dd class="col-sm-8"><span class="badge bg-info">@Model.Product.Adapter.Name</span></dd>

                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.Product.IsEnabled ? "bg-success" : "bg-secondary")">
                            @(Model.Product.IsEnabled ? "✓ Enabled" : "✗ Disabled")
                        </span>
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Check Interval:</dt>
                    <dd class="col-sm-8">Every @Model.Product.CheckIntervalSeconds seconds</dd>

                    <dt class="col-sm-4">Product URL:</dt>
                    <dd class="col-sm-8">
                        <a href="@Model.Product.ProductPageUrl" target="_blank" class="text-break">
                            @Model.Product.ProductPageUrl
                        </a>
                    </dd>

                    <dt class="col-sm-4">Created:</dt>
                    <dd class="col-sm-8">@Model.Product.CreatedAt.ToLocalTime().ToString("g")</dd>

                    <dt class="col-sm-4">Last Updated:</dt>
                    <dd class="col-sm-8">
                        @if (Model.Product.UpdatedAt.HasValue)
                        {
                            @Model.Product.UpdatedAt.Value.ToLocalTime().ToString("g")
                        }
                        else
                        {
                            <span class="text-muted">Never</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <div class="mt-3">
            <h6>Monitored Sizes:</h6>
            <div>
                @foreach (var sku in Model.Product.ProductSkus)
                {
                    if (sku.TemporaryDisabled)
                    {
                        <span class="badge bg-secondary text-decoration-line-through me-1" title="Temporarily disabled">@sku.Name (SKU: @sku.Sku)</span>
                    }
                    else
                    {
                        <span class="badge bg-primary me-1">@sku.Name (SKU: @sku.Sku)</span>
                    }
                }
            </div>
        </div>
    </div>
</div>

<!-- Notification History -->
<div class="card mb-4">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0">Notification History (Last 50)</h5>
    </div>
    <div class="card-body">
        @if (!Model.NotificationHistory.Any())
        {
            <p class="text-muted mb-0">No notifications sent yet.</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>SKU</th>
                            <th>Product URL</th>
                            <th>Email</th>
                            <th>WhatsApp</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.NotificationHistory.Count; i++)
                        {
                            var notification = Model.NotificationHistory[i];
                            <tr>
                                <td>@notification.SentAt.ToLocalTime().ToString("g")</td>
                                <td><span class="badge bg-primary">@string.Join(", ", notification.ProductSkus.Select(x => x.Name))</span></td>
                                <td>
                                    <a href="@notification.ProductPageUrl" target="_blank" class="text-truncate d-inline-block" style="max-width: 300px;">
                                        @notification.ProductPageUrl
                                    </a>
                                </td>
                                <td>
                                    @if (notification.EmailSent)
                                    {
                                        <span class="text-success">✓ Sent</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger">✗ Failed</span>
                                    }
                                </td>
                                <td>
                                    @if (notification.WhatsAppSent)
                                    {
                                        <span class="text-success">✓ Sent</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger">✗ Failed</span>
                                    }
                                </td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#notificationModal@(i)">
                                        <i class="bi bi-eye"></i> View
                                    </button>
                                </td>
                            </tr>

                            <!-- Modal for this notification -->
                            <div class="modal fade" id="notificationModal@(i)" tabindex="-1" aria-labelledby="notificationModalLabel@(i)" aria-hidden="true">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="notificationModalLabel@(i)">Notification Details</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <dl class="row">
                                                <dt class="col-sm-3">Sent At:</dt>
                                                <dd class="col-sm-9">@notification.SentAt.ToLocalTime().ToString("f")</dd>

                                                <dt class="col-sm-3">SKUs:</dt>
                                                <dd class="col-sm-9">@string.Join(", ", notification.ProductSkus.Select(x => x.Name))</dd>

                                                <dt class="col-sm-3">Product URL:</dt>
                                                <dd class="col-sm-9">
                                                    <a href="@notification.ProductPageUrl" target="_blank">@notification.ProductPageUrl</a>
                                                </dd>
                                            </dl>

                                            <hr />

                                            <h6 class="mt-3">Email Content</h6>
                                            @if (notification.EmailSent && !string.IsNullOrWhiteSpace(notification.EmailBody))
                                            {
                                                <div class="card bg-light">
                                                    <div class="card-body">
                                                        <pre class="mb-0" style="white-space: pre-wrap;">@notification.EmailBody</pre>
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <p class="text-muted">No email content available.</p>
                                            }

                                            <h6 class="mt-4">WhatsApp Content</h6>
                                            @if (notification.WhatsAppSent && !string.IsNullOrWhiteSpace(notification.WhatsAppBody))
                                            {
                                                <div class="card bg-light">
                                                    <div class="card-body">
                                                        <pre class="mb-0" style="white-space: pre-wrap;">@notification.WhatsAppBody</pre>
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <p class="text-muted">No WhatsApp content available.</p>
                                            }
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- Job Execution Logs -->
<div class="card mb-4">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0">Job Execution Logs (Last 50)</h5>
    </div>
    <div class="card-body">
        @if (!Model.JobExecutionLogs.Any())
        {
            <p class="text-muted mb-0">No job executions yet.</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Interval</th>
                            <th>Status</th>
                            <th>Duration</th>
                            <th>Products Found</th>
                            <th>Notifications Sent</th>
                            <th>Error Message</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.JobExecutionLogs.Count; i++)
                        {
                            var log = Model.JobExecutionLogs[i];
                            var previousLog = i < Model.JobExecutionLogs.Count - 1 ? Model.JobExecutionLogs[i + 1] : null;
                            var interval = previousLog != null ? (log.ExecutedAt - previousLog.ExecutedAt) : (TimeSpan?)null;

                            <tr>
                                <td>@log.ExecutedAt.ToLocalTime().ToString("u")</td>
                                <td>
                                    @if (interval.HasValue)
                                    {
                                        var totalSeconds = interval.Value.TotalSeconds;
                                        if (totalSeconds < 60)
                                        {
                                            <span class="text-muted small">@($"+{totalSeconds:F1}s")</span>
                                        }
                                        else if (totalSeconds < 3600)
                                        {
                                            var minutes = (int)(totalSeconds / 60);
                                            var seconds = (int)(totalSeconds % 60);
                                            <span class="text-muted small">@($"+{minutes}m {seconds}s")</span>
                                        }
                                        else
                                        {
                                            var hours = (int)(totalSeconds / 3600);
                                            var minutes = (int)((totalSeconds % 3600) / 60);
                                            <span class="text-muted small">@($"+{hours}h {minutes}m")</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted small">-</span>
                                    }
                                </td>
                                <td>
                                    @if (log.Success)
                                    {
                                        <span class="badge bg-success">✓ Success</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">✗ Failed</span>
                                    }
                                </td>
                                <td>
                                    @if (log.Duration.TotalSeconds < 1)
                                    {
                                        <span class="text-muted">@($"{log.Duration.TotalMilliseconds:F0}ms")</span>
                                    }
                                    else if (log.Duration.TotalSeconds < 60)
                                    {
                                        <span class="text-muted">@($"{log.Duration.TotalSeconds:F2}s")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">@($"{log.Duration.Minutes}m {log.Duration.Seconds}s")</span>
                                    }
                                </td>
                                <td>@log.NotificationHistoryId.HasValue</td>
                                @* Not correct 100% *@
                                <td>@log.NotificationHistoryId.HasValue</td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(log.ErrorMessage))
                                    {
                                        <span class="text-danger small">@log.ErrorMessage</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<div class="mb-4">
    <a asp-action="Edit" asp-route-id="@Model.Product.Id" class="btn btn-warning">
        <i class="bi bi-pencil"></i> Edit Product
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>
